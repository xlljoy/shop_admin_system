<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.xlljoy.o2o.dao.ShopCategoryDao">
	<select id="queryShopCategory" 
		resultType="com.xlljoy.o2o.entity.ShopCategory" >
		SELECT id, name, category_desc, img, 
			priority, create_time, update_time, parent_id
		FROM
		tb_shop_category
		<where>
			<if test="shopCategoryCondition.parent != null">
			and parent_id = #{shopCategoryCondition.parent.id}</if>
		</where>
		ORDER BY
		priority DESC
	</select>
</mapper>