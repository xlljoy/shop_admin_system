package com.xlljoy.o2o.enums;

public enum ShopStateEnum {
	CHECK(0, "checking"), OFFLINE(-1, "illegal shop"), SUCCESS(1, "well done"), PASS(2, "pass verification"), INNER_ERROR(-1001,
			"internal system error "), NULL_SHOPID(-1002, "ShopId is empty"),NULL_SHOP(-1003, "shop info is empty");
	private int state;
	private String stateInfoString;
	
	private ShopStateEnum(int state, String stateInfoString) {
		this.state = state;
		this.stateInfoString = stateInfoString;
	}
	
	public static ShopStateEnum stateOf(int state) {
		for (ShopStateEnum stateEnum : values()) {
			if (stateEnum.state == state) {
				return stateEnum;
			}
		}
		return null;
	}
}
